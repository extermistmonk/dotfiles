bindsym $mod+F9 move container to workspace number 9
bindsym $mod+F10 move container to workspace number 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+Escape exec xkill

bindsym $mod+L exec i3lock -c 000000

bindsym XF86AudioMicMute exec synclient TouchpadOff=$(synclient -l | grep -c 'TouchpadOff.*=.*0')
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ 
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- 
bindsym XF86AudioMute exec amixer -q set Master toggle
bindsym XF86Calculator exec speedcrunch
bindsym XF86MyComputer exec thunar
bindsym XF86AudioPrev exec ncmpcpp prev
bindsym XF86AudioNext exec ncmpcpp next
bindsym XF86AudioPlay exec ncmpcpp toggle
bindsym XF86WebCam exec xset q | grep -q 'timeout:  60' && xset s off || xset s 60 60
bindsym XF86Display exec sudo trackpoint_apply
bindsym XF86MonBrightnessDown exec ~/.bin/lowerbrightness.sh 
bindsym XF86MonBrightnessUp exec xbacklight +10
bindsym Print exec scrot -e 'mv $f ~/Pictures/Screenshots'
bindsym $mod+r exec i3-input -F 'rename workspace to %s' -P 'New name: ' -f Terminus

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 5 ppt
        bindsym Down resize grow height 10 px or 5 ppt
        bindsym Up resize shrink height 10 px or 5 ppt
        bindsym Right resize grow width 10 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

#bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command  /usr/bin/i3bar-icons
    status_command $HOME/.bin/conky-i3bar
	font pango:Liberation Sans, Ionicons, Icons 8
	position top
    	colors {
			background #2c2e2f
            statusline #e0e0e0
            focused_workspace        #2c2e2f #2c2e2f #ffffff
            inactive_workspace       #2c2e2f #2c2e2f #808080
            urgent_workspace         #2c2e2f #2c2e2f #900000
   }
}

